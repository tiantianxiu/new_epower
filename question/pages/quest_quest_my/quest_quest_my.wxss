.article{
  background-color: #fff;
  margin-bottom: 10rpx;
}
.answer-abs{
  position: absolute;
  bottom: -60rpx;
  right: 20%;
  width: 150rpx;
  height: 150rpx;
}
.article .title {
  font-size: 30rpx;
  border-bottom: 2rpx solid #eeeeee;
  color: #3f3f3f;
  padding: 24rpx 0 40rpx;
  position: relative;
}
.article-name{
  display: flex;
  font-size: 24rpx;
  color: #818181;
  padding: 20rpx 0 12rpx;
}
.article-name .reply{
  width: 50%;
  text-align: left;
}
.article-name .ext{
  width: 50%;
  text-align: right;
}