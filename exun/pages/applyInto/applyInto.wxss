.form-block-wrap{
	padding:50rpx;
}
.form-block{
	background-color: #fff;
	border-radius: 10rpx;
	padding:60rpx 30rpx;
	box-shadow: 3rpx 3rpx 3rpx 3rpx rgba(0,0,0, 0.02)
}
.form-block-item{
	display: -webkit-flex;
	display: flex;
	padding:10rpx 0;
}
.form-block-item .form-name{
	color:#6a6a6a;
	width: 140rpx;
	line-height: 60rpx;
}
.form-block-item .form-input{
	flex: 1;
}
.form-block-item .input-text,
.form-block-item .input-picker,
.form-block-item .input-textarea{
	border-radius: 6rpx;
	background: none;
	border:1rpx solid #eee;
	width: 100%;
	padding:0 20rpx;
	box-sizing: border-box;
	height: 60rpx;
	position: relative;
}
.form-block-item .input-textarea{
	height: 200rpx;
	line-height: 1.6;
}
.form-block-item .input-picker .img{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.form-btn-wrap{
	padding: 100rpx 30rpx 50rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.form-btn-wrap .btn-main-round{
	width: 100%;
	height: 64rpx;
	line-height: 64rpx;
	border-radius: 32rpx;
	color: #33d09a;
	font-size: 28rpx;
	background-color: #fff;
	text-align: center;
	border:1rpx solid #33d09a;
	box-sizing: border-box;
	margin:0 15rpx;
	max-width: 350rpx;
	flex: 1;
}
.form-btn-wrap .btn-main-round.disabled{
	color: #8a8a8a;
	border-color:#8a8a8a;
}
.uploadLicense{
	width: 200rpx;
	height: 200rpx;
	background: #eee center center no-repeat url('http://cdn.e-power.vip/resources/image/add-gray.png');
	background-size: 40%;
	position: relative;
}
.uploadLicense .del{
	width: 50rpx;
	height: 50rpx;
	background: rgba(0,0,0,0.5);
	background-size: 70%;
	position: absolute;
	top: -10rpx;
	right: -10rpx;
	z-index: 5;
	border-radius: 25rpx;
}
.uploadLicense .del:after{
  content: " ";
  position: absolute;
  width:28rpx;
  display: block;
  height: 6rpx;
  background-color: #fff;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.uploadLicense .licenseImage{
	height: 100%;
	background: center center no-repeat ;
	background-size: contain;
}

