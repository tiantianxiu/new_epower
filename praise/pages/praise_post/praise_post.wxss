.container{
  padding:0;
}


image{
  width: 100%;
}
.car-list-wrap{
  background-color: #fff;
}
.car-list-wrap:after{
  content: '';
  width: 0;
  height: 0;
  clear: both;
  overflow: hidden;
  display: block;  
}
.car-list-wrap .article{
  width: 50%;
  float:left;
  border-top:1rpx solid #eee;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
  padding:20rpx 30rpx;
}
.car-list-wrap .article .article-img{
  width: 100%;
  margin-right: 0;
  margin-bottom: 20rpx;
  height: 150rpx;
}
.car-list-wrap .article{
  text-align: center;
}

.section-wrap{
  background:rgba(0,0,0,0) !important;
}
.scrool-main{
  margin:0 30rpx;
  width:690rpx;
}
.scrool-main .scrool-item{
  display:inline-block;
  height:120rpx;
  width: 223rpx;
  text-align: center;
  position: relative;
  margin-right: 10rpx;
}
.scrool-main .scrool-item .hot-img{
  height: 100%;
  width: 100%;
  background:no-repeat center center;
  background-size: cover;  
}

.scrool-main .scrool-item .text{
  position: absolute;
  left: 0;
  right: 0;
  text-align: center;
  bottom:0;
  font-size: 20rpx;
  color:#fff;
  line-height: 20rpx;
  padding:8rpx;
  background-color: rgba(0,0,0,0.5);
}

.forum-cells {
  padding:10rpx 20rpx;
  background: white;
  margin-bottom: 10rpx;
  border-radius: 5px;
}

.forum-cell {
  margin:10rpx 0;
  padding:10rpx 0;
  border-bottom: 1px solid #efefef;
}

.forum-list {
	margin-top: 20rpx;
}

.forum-cells-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height:60rpx;
  color:#000;
  background-color:#fff;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
  padding:10rpx 20rpx;
}

.forum-cells-group image {
  width: 30rpx;
  height: 30rpx;
}



