.container-dialogue {
}

.dialogue-list {
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.dialogue-list .user-info {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  display: flex;
}

.dialogue-list .user-info .user-photo {
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 2rpx;
  background-color: #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.dialogue-list .user-info .user-photo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 2rpx solid #fff;
}

.dialogue-list .user-name {
  flex: 1;
}

.dialogue-text {
  border: 1rpx solid #e0e0e0;
  border-radius: 15rpx;
  background-color: #fff;
  font-size: 24rpx;
  color: #656565;
  padding: 14rpx 30rpx;
  display: inline-block;
  position: relative;
  margin-top: 20rpx;
  word-break: break-all;
  margin-left: 4rpx;
}

.dialogue-text .arrow {
  height: 0;
  width: 0;
  border-style: solid;
  border-width: 16rpx 12rpx;
  border-color: transparent transparent #eee transparent;
  position: absolute;
  top: -31rpx;
  left: 30rpx;
}

.dialogue-text .arrow:after {
  content: '';
  display: block;
  height: 0;
  width: 0;
  overflow: hidden;
  border-style: solid;
  border-width: 16rpx 12rpx;
  border-color: transparent transparent #fff transparent;
  position: absolute;
  top: -14rpx;
  left: -12rpx;
}

.dialogue-right .dialogue-text .arrow {
  left: auto;
  right: 30rpx;
}

.dialogue-right .dialogue-text::after {
  border-bottom-color: #7fe1c0;
}

.dialogue-right {
  text-align: right;
}

.dialogue-right .user-name {
  text-align: right;
  width: 60%;
  color: #3d3d3d;
}

.dialogue-list .user-info .user-photo {
  width: 90rpx;
  height: 90rpx;
  display: inline-block;
}

.dialogue-right .user-info .user-photo {
  margin-left: 20rpx;
  margin-right: 0;
}

.dialogue-right .dialogue-text {
  background-color: #7fe1c0;
  text-align: left;
  margin-left: 0;
  margin-right: 4rpx;
}

.original .dialogue-text::after {
  content: ' ';
  position: absolute;
  left: 20rpx;
  top: -16rpx;
  z-index: 1;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 18rpx solid #fff;
}

.dialogue-right.original .dialogue-text::after {
  left: auto;
  right: 20rpx;
    border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 18rpx solid #7fe1c0;
}

.page-tail {
  left: 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
  background-color: #00c481;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.resp-input-cell {
  width: 84%;
  margin-right: 20rpx;
}

.resp-input {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  margin: 15rpx 0 15rpx 25rpx;
  box-sizing: border-box;
  border: 1px solid #fff;
  border-radius: 10rpx;
  background-color: #fff;
  color: #757575;
  flex: 1;
}

.resp-btn {
  font-size: 30rpx;
  color: #fff;
  line-height: 60rpx;
  width: 20%;
  text-align: center;
}
