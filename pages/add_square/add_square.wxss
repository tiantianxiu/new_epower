page {
  background-color: #fff !important;
}

.add-square-container {
  padding: 28rpx;
}

.add-aqu-header {
  padding-bottom: 30rpx;
  position: relative;
  height: 52rpx;
  line-height: 52rpx;
}

.btn {
  position: absolute;
  right: 0;
  top:0;
  display: inline-block;
  width: 88rpx;
  height: 52rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background-color: #00c481;
  border-radius: 10rpx;
  font-weight: 600;
}

textarea {
  width: 100%;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.images .li {
  display: inline-block;
  box-sizing: border-box;
  width: 30%;
  height: 200rpx;
  margin: 0 10rpx;
  background-color: rgb(228, 227, 227);
  position: relative;
}
.images .li:first-child{
margin-left: 10rpx;
}
.li.vli {
  width: 50%;
  height: 400rpx;
}

video, image {
  z-index: 1;
}

.video-del {
  width: 100%;
  color: #fff;
  background-color: #f00;
  text-align: center;
  height: 46rpx;
  line-height: 46rpx;
}

.locals {
  margin-top: 30rpx;
  display: inline-flex;
  padding: 2rpx 20rpx;
  border-radius: 30rpx;
  border: 2rpx solid rgb(238, 238, 238);
  color: #00c481;
  position: relative;
}

.locals text {
  width: 50rpx;
}

.locals image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 4rpx;
  right: 10rpx;
}

.animated {
  animation-duration: 0.3s;
}

.pic-title{
  background-color: rgb(236, 236, 236);
  padding: 8rpx 28rpx;
  line-height:52rpx;
  vertical-align: text-bottom;
}
.pic-title text{
  color: rgb(196, 196, 196);
  font-size: 44rpx;
}
.pic-content{
  padding: 28rpx;
}
.pic-content .li{
  padding: 6rpx 18rpx;
  border-radius: 40rpx;
  display: inline-block;
  border: 2rpx solid rgb(182, 181, 181);
  color: rgb(136, 136, 136);
  line-height: 100%;
  font-size: 26rpx;
}
.pic-content .li.active{
  background-color: rgb(218, 218, 218);
  color: rgb(92, 138, 224)
}